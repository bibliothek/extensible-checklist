# Database Configuration
# Copy this file to .env and update with your actual database credentials

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/extensible_checklist?schema=public"

# Auth.js Configuration
# NEXTAUTH_URL should match your application URL
NEXTAUTH_URL="http://localhost:3000"

# NEXTAUTH_SECRET is used to encrypt tokens and email verification hashes
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl"
